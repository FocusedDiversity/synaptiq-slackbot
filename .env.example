# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token  # Only needed for Socket Mode

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default  # Optional: specific AWS profile to use

# DynamoDB Configuration
TABLE_NAME=standup-bot-dev
DYNAMODB_ENDPOINT=http://localhost:8000  # For local development

# Lambda Configuration
PROCESSOR_FUNCTION=standup-bot-dev-ProcessorFunction-ABC123
WEBHOOK_FUNCTION=standup-bot-dev-WebhookFunction-DEF456
SCHEDULER_FUNCTION=standup-bot-dev-SchedulerFunction-GHI789

# Development Settings
ENVIRONMENT=development
LOG_LEVEL=debug
PORT=3000  # For local development server

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_PROFILING=false

# Optional: Redis Configuration (if using caching)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Optional: Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ADMIN_EMAIL=admin@example.com

# Optional: S3 Configuration (for exports/backups)
S3_BUCKET=standup-bot-exports-dev
S3_PREFIX=exports/

# Optional: API Keys for integrations
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key
